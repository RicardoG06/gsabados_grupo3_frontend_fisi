<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Fragments.menu.programacuidado.SolicitarCuidado">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:minHeight="?attr/actionBarSize"
            android:background="@color/primaryColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleTextColor="@color/white">
        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:id="@+id/titulo_seleccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Direccion , Fecha y Hora"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            app:layout_goneMarginLeft="20dp"
            app:layout_goneMarginTop="36dp"
            android:textStyle="bold"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            />

        <TextView
            android:id="@+id/dia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha y hora:"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/titulo_seleccion"/>

        <EditText
            android:id="@+id/fecha"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Seleccionar fecha"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:inputType="date"
            android:textSize="15sp"
            android:padding="15dp"
            android:background="@drawable/edittext_custom"
            app:layout_constraintTop_toBottomOf="@+id/dia"
            android:clickable="false"
            android:focusable="false"
            />

        <EditText
            android:id="@+id/hora"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Seleccionar hora"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:inputType="time"
            android:textSize="15sp"
            android:padding="15dp"
            android:background="@drawable/edittext_custom"
            app:layout_constraintTop_toBottomOf="@+id/fecha"
            android:clickable="false"
            android:focusable="false"/>

        <EditText
            android:id="@+id/cantidad_horas"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Cantidad de horas del servicio"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:inputType="time"
            android:textSize="15sp"
            android:padding="15dp"
            android:background="@drawable/edittext_custom"
            app:layout_constraintTop_toBottomOf="@+id/hora"/>

        <TextView
            android:id="@+id/dejanos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dejanos tu dirección y alguna referencia:"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toBottomOf="@+id/cantidad_horas"/>

        <EditText
            android:id="@+id/edit1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Ubicación"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:inputType="text"
            android:textSize="15sp"
            android:padding="15dp"
            app:layout_constraintTop_toBottomOf="@+id/dejanos"
            android:background="@drawable/edittext_custom"/>

        <EditText
            android:id="@+id/edit2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Ingresar referencia"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:inputType="text"
            android:textSize="15sp"
            android:padding="15dp"
            app:layout_constraintTop_toBottomOf="@+id/edit1"
            android:background="@drawable/edittext_custom"
            android:focusable="false"
            android:clickable="true"
            android:cursorVisible="false"/>



    <Button
        android:id="@+id/button_siguiente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SIGUIENTE"
        android:fontFamily="@font/roboto_medium"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="bottom"
        android:background="@drawable/rounded_button"
        app:layout_constraintTop_toBottomOf="@+id/edit2"
        />

</androidx.constraintlayout.widget.ConstraintLayout>