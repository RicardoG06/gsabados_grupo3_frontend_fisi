<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Fragments.mascotas.MisMascotasFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mascotas registradas"
            android:textSize="18sp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/edit_mascotas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Editar mascotas"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:gravity="center">
        <Button
            android:id="@+id/btn_agregarmascotas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:text="Agregar mascotas"
            android:layout_marginTop="650dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/celeste"
            android:background="@drawable/rounded_button"/>
    </LinearLayout>

</FrameLayout>